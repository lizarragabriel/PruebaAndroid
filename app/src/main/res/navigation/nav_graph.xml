<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.lizarragabriel.pruebaandroid.ui.login.LoginFragment"
        android:label="Inicio SesiÃ³n" >
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out" />
        <action
            android:id="@+id/action_loginFragment_to_signUpFragment"
            app:destination="@id/signUpFragment"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.lizarragabriel.pruebaandroid.ui.home.HomeFragment"
        android:label="Beers" >
        <action
            android:id="@+id/action_homeFragment_to_detailFragment"
            app:destination="@id/detailFragment"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out" />
        <action
            android:id="@+id/action_homeFragment_to_favoriteFragment"
            app:destination="@id/favoriteFragment"
            app:enterAnim="@anim/slide_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/slide_out" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.lizarragabriel.pruebaandroid.ui.detail.DetailFragment"
        android:label="Detalle" />
    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.lizarragabriel.pruebaandroid.ui.favorite.FavoriteFragment"
        android:label="Mis Favoritos" />
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.lizarragabriel.pruebaandroid.ui.signup.SignUpFragment"
        android:label="Registrate" />
</navigation>